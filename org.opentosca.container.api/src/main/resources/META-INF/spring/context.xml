<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">
  <description>
    Configuration for Spring-Bean service discovery and injection
  </description>

  <context:annotation-config />

  <context:component-scan base-package="org.opentosca.container.api.controller" />
  <context:component-scan base-package="org.opentosca.container.api.service" />

  <!-- configuration for external modules -->
  <context:component-scan base-package="org.opentosca.deployment.checks" />

  <context:component-scan base-package="org.opentosca.container.engine.plan.impl" />
  <bean class="org.opentosca.container.engine.plan.plugin.bpel.BpelPlanEnginePlugin" />
  <bean class="org.opentosca.container.engine.plan.plugin.camunda.CamundaPlanEnginePlugin" />

  <!-- importing external module's own configuration -->
  <import resource="classpath:/spring/context-container-core.xml" />
  <import resource="classpath:/spring/context-bus-application.xml" />
  <import resource="classpath:/spring/context-planbuilder.xml" />
  <import resource="classpath:/spring/context-legacy.xml" />
  <import resource="classpath:/spring/context-control.xml" />
</beans>
