<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">
  <description>
    Configuration for Spring-Bean service discovery and injection
  </description>

  <context:annotation-config />
  <context:component-scan base-package="org.opentosca.container.api.controller" />
  <context:component-scan base-package="org.opentosca.container.api.service" />
  <context:component-scan base-package="org.opentosca.container.control.impl" />
  <context:component-scan base-package="org.opentosca.container.core.impl.plan" />
  <context:component-scan base-package="org.opentosca.container.core.impl.service" />
  <context:component-scan base-package="org.opentosca.container.core.service.impl" />
  <context:component-scan base-package="org.opentosca.container.core.engine.impl" />
  <context:component-scan base-package="org.opentosca.container.engine.plan.impl" />

  <context:component-scan base-package="org.opentosca.container.legacy.core.service" />
  <context:component-scan base-package="org.opentosca.container.legacy.core.engine" />
  <context:component-scan base-package="org.opentosca.container.legacy.core.plan" />

  <context:component-scan base-package="org.opentosca.planbuilder.export" />
  <context:component-scan base-package="org.opentosca.planbuilder.importer" />

  <context:component-scan base-package="org.opentosca.deployment.checks" />

  <bean class="org.opentosca.container.engine.plan.plugin.bpel.BpelPlanEnginePlugin" />
  <bean class="org.opentosca.container.engine.plan.plugin.camunda.CamundaPlanEnginePlugin" />
  <bean class="org.opentosca.container.core.engine.xml.impl.XMLSerializerServiceImpl" />

  <import resource="classpath*:/META-INF/spring/context.xml" />
</beans>
